@keyframes fadeIn {
    from { opacity: 0; transform: translateY(3px); }
    to   { opacity: 1; transform: translateY(0); }
}

@keyframes cpuEmberPulse {
    0%   { filter: hue-rotate(0deg)   brightness(1.1) saturate(1.2); }
    50%  { filter: hue-rotate(15deg)  brightness(1.3) saturate(1.5); }
    100% { filter: hue-rotate(0deg)   brightness(1.1) saturate(1.2); }
}

