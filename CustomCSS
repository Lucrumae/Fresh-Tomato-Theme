    /* ┌─────────────────────────────────────────────────────────┐
       │                     LINKS                               │
       └─────────────────────────────────────────────────────────┘ */
    --link-color:       #8bc34a;   /* resting link — bright leaf green         */
    --link-hover-color: #e8860a;   /* hover link — golden flame                */


    /* ┌─────────────────────────────────────────────────────────┐
       │                    BUTTONS                              │
       └─────────────────────────────────────────────────────────┘ */
    --btn-bg:    #7a4a1e;   /* button background — aged wood              */
